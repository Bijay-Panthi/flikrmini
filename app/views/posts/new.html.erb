
<div class="container">
<h1>
  Upload your picture
</h1>


<!-- form_for(image, :html => { :multipart => true }) do |f| -->
<%= form_for(@post, :html => {:multipart => true}) do |f| %>
<p>
  <%= f.label :image %>
  <%= f.file_field :image %>
</p>
<p>
  <%= f.label :description %>
  <%= f.text_field :description %>
</p>

<%= f.submit %>

<% end %>

</div>
